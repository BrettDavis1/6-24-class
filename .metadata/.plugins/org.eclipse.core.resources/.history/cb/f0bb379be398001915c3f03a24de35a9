package com.revature.driver;

import java.util.Scanner;

public class CardShopDriver {
	private static Scanner scan = new Scanner(System.in);

	public static void main(String[] args) {
		System.out.println("Enter 1 to view available cards.");
		System.out.println("Enter 2 to sell a card.");
		System.out.println("Enter 3 to purchase a card.");
		System.out.println("Enter 4 to search for a specific card.");
		System.out.println("Enter 5 to appraise the total value of cards in the shop.");

	}
}
