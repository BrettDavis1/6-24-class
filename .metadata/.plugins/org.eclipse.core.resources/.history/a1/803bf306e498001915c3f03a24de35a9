package com.revature.driver;

import java.util.Scanner;

public class CardShopDriver {
	private static Scanner scan = new Scanner(System.in);

	public static void main(String[] args) {
		while (true) {
			System.out.println("Enter 1 to view available cards.");
			System.out.println("Enter 2 to sell a card.");
			System.out.println("Enter 3 to purchase a card.");
			System.out.println("Enter 4 to search for a specific card.");
			System.out.println("Enter 5 to appraise the total value of cards in the shop.");

			String input = scan.nextLine();
			switch (input) {
			case "1":
				System.out.println("here are the cards");
				break;
			case "2":
				System.out.println("you sold a card");
				break;
			case "3":
				System.out.println("you bought a card");
				break;
			case "4":
				System.out.println("here is the card your looking for");
				break;
			case "5":
				System.out.println("we have no money");
				break;
			default:
				System.out.println("Did not understand that selection, try again");
				break;
			}
		}
	}
}
